<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Telas.Sugestoes">

        <LinearLayout
            android:id="@+id/ll_sugestoes_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_sugestoes_cipa_mais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/textColor"
                android:textSize="36sp"
                android:transitionName="textoProfile"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cipa"
                android:transitionName="imagemProfile"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sugestoes_cipa_mais_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/texto_cipa"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_sugestoes_titulo" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_lista_usuarios"
            android:orientation="vertical"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sugestoes_cipa_mais_I"
            tools:layout_editor_absoluteX="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_lista_usuarios"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sugestao_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/envie_uma_sugestao_para_o_sesmt_cipa_a"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:padding="6dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_lista_usuarios"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sugestao_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="start"
                    android:text="@string/assunto"
                    android:textColor="@color/textColor"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/sugestao_reclamacao_elogio">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_sugestao_assunto"
                        style="@style/EditText_sugestoes"
                        android:textSize="18sp"
                        android:layout_margin="8dp"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="@drawable/bg_lista_usuarios"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sugestao_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:gravity="start"
                    android:text="@string/mensagem"
                    android:textColor="@color/textColor"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mensagem">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_sugestao_mensagem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="6"
                        android:textSize="18sp"
                        android:textColor="@color/textColor"
                        android:layout_margin="8dp"
                        android:gravity="start"
                        android:padding="6dp"
                        android:background="@drawable/bg_lista_usuarios"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sugestoes_enviar"
            style="@style/Button_Cipa_Menu_sw320dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="Enviar"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/ll_sugestoes_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_sugestoes_voltar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="30dp"
                android:text="@string/voltar" />

            <Button
                android:id="@+id/btn_sugestoes_sair"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:text="@string/sair" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sugestoes_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_produtoByTechnet"
                style="@style/by_technet" />

            <TextView
                android:id="@+id/tv_versao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/versao_1_0"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>