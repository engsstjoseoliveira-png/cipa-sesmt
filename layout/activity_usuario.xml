<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Users.Usuario">

        <LinearLayout
            android:id="@+id/ll_usuario_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_usuario_cipa_mais"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:transitionName="imagemProfile"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cipa"
                android:layout_marginEnd="40dp"/>

            <TextView
                android:id="@+id/tv_usuario_cipa_mais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/textColor"
                android:textSize="36sp"
                android:transitionName="textoProfile"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_usuario_cipa_mais_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_usuario_titulo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="@string/texto_cipa"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="26sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_usuario_titulo" />

        <TextView
            android:id="@+id/tv_usuario_seja_bem_vindo_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_usuario_cipa_mais_I"
            android:padding="6dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_usuario_cipa_mais_I" />

        <TextView
            android:id="@+id/tv_usuario_seja_bem_vindo_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_usuario_seja_bem_vindo_nome"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_usuario_seja_bem_vindo_nome" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linearLayout7"
            android:layout_below="@+id/tv_usuario_seja_bem_vindo_email"
            android:background="@drawable/btn_enable_false"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_usuario_seja_bem_vindo_email">

        <LinearLayout
            android:id="@+id/ll_pagerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_enable_false"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager2"
                    android:layout_width="match_parent"
                    android:layout_height="480dp" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/switchMode_usuarios">

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="4dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchMode_usuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:padding="15dp"
                android:text="@string/text"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:switchPadding="10dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_usuario_design"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout_pesquisa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_usuario_cadastrar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="30dp"
                android:text="@string/cadastrar"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_usuario_gerenciar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="30dp"
                android:text="@string/gerenciar"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_usuario_voltar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="30dp"
                android:text="@string/voltar" />

            <Button
                android:id="@+id/btn_usuario_sair"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:text="@string/sair" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_pesquisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_usuario_design"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ll_usuario_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_usuario_pesquisa"
                style="@style/Button_tcle"
                android:text="@string/responder_pesquisa"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/switchMode_usuarios"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_usuario_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_produtoByTechnet"
                style="@style/by_technet" />

            <TextView
                android:id="@+id/tv_versao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/versao_1_0"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>