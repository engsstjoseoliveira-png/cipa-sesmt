<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Telas.Seja_um_cipeiro">

        <LinearLayout
            android:id="@+id/ll_cipeiro_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_cipeiro_cipa_mais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/textColor"
                android:textSize="36sp"
                android:transitionName="textoProfile"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cipa"
                android:transitionName="imagemProfile"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_seja_um_cipeiro_cipa_mais_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/texto_cipa"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_cipeiro_titulo" />

        <LinearLayout
            android:id="@+id/ll_seja_um_cipeiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_cipa"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_seja_um_cipeiro_cipa_mais_I"
            tools:ignore="WebViewLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/quer_ser_um_cipeiro_i"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <WebView
                android:id="@+id/webv_seja_um_cipeiro_i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/quer_ser_um_cipeiro_ii"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <WebView
                android:id="@+id/webv_seja_um_cipeiro_ii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/quer_ser_um_cipeiro_iii"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <WebView
                android:id="@+id/webv_seja_um_cipeiro_iii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/quer_ser_um_cipeiro_iv"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <WebView
                android:id="@+id/webv_seja_um_cipeiro_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/quer_ser_um_cipeiro_v"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <WebView
                android:id="@+id/webv_seja_um_cipeiro_v"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/quer_ser_um_cipeiro_vi"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <WebView
                android:id="@+id/webv_seja_um_cipeiro_vi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/quer_ser_um_cipeiro_vii"
                android:textColor="@color/textColor"
                android:textSize="20sp" />

            <WebView
                android:id="@+id/webv_seja_um_cipeiro_vii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_seja_um_cipeiro_gestao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_cipa"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_seja_um_cipeiro"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/tv_seja_um_cipeiro_mandato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/o_mandato_da_cipa_a_de_2_anos"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_seja_um_cipeiro_gestao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/a_atual_gestao_vai_ate_31_12_2024"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/a_proxima_eleico_da_cipa_a_esta_prevista_para"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_seja_um_cipeiro_eleicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/_01_12_2024"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_seja_um_cipeiro_eleicao_i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/seja_um_cipeiro_as_inscricoes_estao_abertas"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_seja_um_cipeiro_eleicao_ii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/periodo_de_inscricoes"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_seja_um_cipeiro_eleicao_iii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/periodo"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_seja_um_cipeiro_editar_gestao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_lista_usuarios"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/ll_seja_um_cipeiro_gestao">

            <LinearLayout
                android:id="@+id/ll_seja_um_cipeiro_editar_gestao_i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_lista_usuarios"
                android:padding="6dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/pagina_de_atualizacao"
                android:textColor="@color/textColor"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/et_seja_um_cipeiro_mandato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/o_mandato_da_cipa_a_de_2_anos"
                android:textColor="@color/textColor"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/et_seja_um_cipeiro_gestao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/a_atual_gestao_vai_ate_31_12_2024"
                android:textColor="@color/textColor"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/a_proxima_eleico_da_cipa_a_esta_prevista_para"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_seja_um_cipeiro_eleicao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/data"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="22sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchMode_seja_um_cipeiro_eleicoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/habilitar_periodo_de_eleicao"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                app:switchPadding="10dp"
                android:layout_gravity="start"/>

            <EditText
                android:id="@+id/et_seja_um_cipeiro_eleicao_iii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:hint="@string/editar_periodo"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_seja_um_cipeiro_limpar_descricao"
                    style="@style/Button_Cipa_atualizar_sw320dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/limpar_descricao" />

                <Button
                    android:id="@+id/btn_seja_um_cipeiro_atualizar_descricao"
                    style="@style/Button_Cipa_atualizar_sw320dp"
                    android:text="@string/atualizar_descricao" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/ll_seja_um_cipeiro_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_seja_um_cipeiro_cadastrar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="30dp"
                android:text="@string/cadastrar" />

            <Button
                android:id="@+id/btn_seja_um_cipeiro_voltar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="30dp"
                android:text="@string/voltar" />

            <Button
                android:id="@+id/btn_seja_um_cipeiro_sair"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:text="@string/sair" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_seja_um_cipeiro_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_produtoByTechnet"
                style="@style/by_technet" />

            <TextView
                android:id="@+id/tv_versao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/versao_1_0"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>