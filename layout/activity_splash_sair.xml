<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Splash_Sair">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp" >


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/iv_splash_sair_cipa"
            android:adjustViewBounds="true"
            android:src="@drawable/cipa"
            android:transitionName="imagemProfile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_splash_sair_cipa_mais"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/textColor"
            android:layout_marginTop="8dp"
            android:transitionName="textoProfile"/>

        <TextView
            android:id="@+id/tv_home_cipa_mais_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_cipa"
            android:textSize="26sp"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_splash_sair_cipa_mais"
            app:layout_constraintStart_toStartOf="@+id/tv_splash_sair_cipa_mais"
            app:layout_constraintTop_toBottomOf="@+id/tv_splash_sair_cipa_mais" />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_home_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_produtoByTechnet"
                style="@style/by_technet" />

            <TextView
                android:id="@+id/tv_versao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/versao_1_0"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>