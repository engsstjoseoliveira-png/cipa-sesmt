<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Telas.Termo_de_aceite">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cipa"
            android:transitionName="imagemProfile"/>

        <TextView
            android:id="@+id/tv_termo_de_aceite_cipa_mais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="36sp"
            android:textColor="@color/textColor"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:transitionName="textoProfile"/>

        <TextView
            android:id="@+id/tv_termo_de_aceite_cipa_mais_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_cipa"
            android:textSize="26sp"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_termo_de_aceite_cipa_mais"
            app:layout_constraintStart_toStartOf="@+id/tv_termo_de_aceite_cipa_mais"
            app:layout_constraintTop_toBottomOf="@+id/tv_termo_de_aceite_cipa_mais" />

        <LinearLayout
            android:id="@+id/ll_termo_de_aceite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btn_cipa"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_termo_de_aceite_cipa_mais_I"
            tools:ignore="WebViewLayout">

            <WebView
                android:id="@+id/webv_termo_de_aceite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/ll_termo_de_aceite_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_termo_de_aceite_voltar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="30dp"
                android:text="@string/voltar" />

            <Button
                android:id="@+id/btn_termo_de_aceite_sair"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:text="@string/sair" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_termo_de_aceite_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_produtoByTechnet"
                style="@style/by_technet" />

            <TextView
                android:id="@+id/tv_versao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/versao_1_0"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>