<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Telas.SESMT">

        <LinearLayout
            android:id="@+id/ll_sesmt_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_sesmt_cipa_mais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="25dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/textColor"
                android:textSize="36sp"
                android:transitionName="textoProfile"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cipa"
                android:transitionName="imagemProfile"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_membros_cipa_mais_I"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/texto_cipa"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_sesmt_titulo" />

        <LinearLayout
            android:id="@+id/ll_cipa_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_lista_usuarios"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_membros_cipa_mais_I">

            <WebView
                android:id="@+id/wv_sesmt_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sesmt_editar_descricao_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_lista_usuarios"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ll_cipa_descricao"
            tools:layout_editor_absoluteX="14dp">

            <LinearLayout
                android:id="@+id/ll_sesmt_editar_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_lista_usuarios"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_sesmt_editar_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="@string/editar_descricao_do_sesmt"
                    android:textColor="@color/textColor"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_sesmt_limpar_descricao"
                        style="@style/Button_Cipa_atualizar_sw320dp"
                        android:layout_marginEnd="40dp"
                        android:text="@string/limpar_descricao" />

                    <Button
                        android:id="@+id/btn_sesmt_atualizar_descricao"
                        style="@style/Button_Cipa_atualizar_sw320dp"
                        android:text="@string/atualizar_descricao" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sesmt_divisao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_lista_usuarios"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_sesmt_editar_descricao_1"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_lista_usuarios"
                android:padding="10dp"
                android:text="@string/engenheiro_de_seguranca_do_trabalho"
                android:textAlignment="viewStart"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_lista_usuarios"
                android:padding="10dp"
                android:text="@string/medico_do_trabalho"
                android:textAlignment="viewStart"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_lista_usuarios"
                android:padding="10dp"
                android:text="@string/tecnico_de_seguranca_do_trabalho"
                android:textAlignment="viewStart"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_lista_usuarios"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/horario_de_atendimento"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/telefone"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="@string/e_mail"
                    android:textAlignment="viewStart"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sesmt_editar_divisao_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_lista_usuarios"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/ll_sesmt_membros"
            app:layout_constraintTop_toBottomOf="@+id/ll_sesmt_divisao"
            tools:layout_editor_absoluteX="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="4dp">

                <Button
                    android:id="@+id/btn_sesmt_limpar_colaboradores"
                    style="@style/Button_Cipa_atualizar_sw320dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/limpar_descricao" />

                <Button
                    android:id="@+id/btn_sesmt_atualizar_colaboradores"
                    style="@style/Button_Cipa_atualizar_sw320dp"
                    android:text="@string/atualizar_descricao" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sesmt_membros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/bg_lista_usuarios"
            android:orientation="vertical"
            android:padding="4dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/bg_lista_usuarios"
                android:padding="4dp"
                android:text="@string/membros_do_sesmt_"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sesmt_membros"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/ll_sesmt_design"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btn_sesmt_voltar"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:layout_marginEnd="60dp"
                android:text="@string/voltar" />

            <Button
                android:id="@+id/btn_sesmt_sair"
                style="@style/Button_Cipa_Menu_sw320dp"
                android:text="@string/sair" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sesmt_design"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_produtoByTechnet"
                style="@style/by_technet" />

            <TextView
                android:id="@+id/tv_versao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/versao_1_0"
                android:textAlignment="center"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>